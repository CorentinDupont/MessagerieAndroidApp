<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.corentindupont.messagerie.Fragment.AccountFragment"
    android:orientation="vertical"
    android:padding="@dimen/global_padding"
    >
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_fragment_title"
                android:gravity="center"
                android:textSize="@dimen/fragment_title_size"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="@dimen/fragment_title_margin_vertical"
                android:layout_marginBottom="@dimen/fragment_title_margin_vertical"
                />

            <!-- Email Edit Text  -->
            <EditText
                android:id="@+id/account_email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/edit_text_text_size"
                android:hint="@string/edit_text_hint_email"
                android:layout_marginTop="@dimen/edit_text_margin_vertical"
                />

            <!--  Email Text  -->
            <EditText
                android:id="@+id/account_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/edit_text_text_size"
                android:hint="@string/edit_text_hint_name"
                android:layout_marginTop="@dimen/edit_text_margin_vertical"
                />

            <!-- Password Edit Text  -->
            <EditText
                android:id="@+id/account_password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="@dimen/edit_text_text_size"
                android:hint="@string/edit_text_hint_password"
                android:layout_marginTop="@dimen/edit_text_margin_vertical"
                />
        </LinearLayout>

</ScrollView>
